<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
    <title>V Share</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/styles.css" />
  </head>

  <body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Secure File Share</a>
      </div>
    </nav>

    <!-- Main Container -->
    <div class="container mt-4 md-3">
      <h1 class="text-center mb-4">Upload Your File</h1>
      <div class="row justify-content-center">
        <div class="col-md-6">
          <!-- File Upload Form -->
          <form id="uploadForm" enctype="multipart/form-data">
            <!-- Drag and Drop Area -->
            <div class="drop-zone">
              <span class="drop-zone__prompt">
                <img
                  src="/img/upload-icon.svg"
                  class="upimg"
                  alt="Upload Icon"
                /><br />Drag & Drop or Click to Upload
              </span>
              <input
                type="file"
                name="file"
                id="fileInput"
                class="drop-zone__input"
                required
              />
            </div>
            <br />

            <!-- Password Input -->
            <div class="mb-3">
              <label for="password" class="form-label"
                >Set a Password (optional)</label
              >
              <input
                type="password"
                class="form-control"
                id="password"
                name="password"
                placeholder="Enter password"
              />
            </div>

            <!-- Confirm Password Input -->
            <div class="mb-3">
              <label for="confirmPassword" class="form-label"
                >Confirm Password</label
              >
              <input
                type="password"
                class="form-control"
                id="confirmPassword"
                name="confirm-password"
                placeholder="Confirm password"
              />
              <div id="passwordMatchStatus" class="form-text"></div>
            </div>

            <!-- Buttons (Upload and Reset) -->
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-submit " id="submitButton">
                Upload
              </button>
              <button type="reset" class="btn btn-secondary" id="resetButton">
                Reset
              </button>
            </div>
          </form>

          <!-- Progress Bar -->
          <div
            class="progress-container"
            id="progressContainer"
            style="display: none; border-radius: 5px; color: #a29bfe;" role="progressbar"
          >
            <div class="progress-bar" id="progressBar">0%</div>
          </div>
          <!-- <div
            class="progress mt-4"
            style="height: 25px; display: none"
            id="progressContainer"
          >
            <div
              class="progress-bar progress-bar-striped progress-bar-animated"
              id="progressBar"
              role="progressbar"
              style="width: 0%"
            >
              0%
            </div>
          </div> -->

          <!-- Download Section with QR Code -->
          <div
            class="mt-4 text-center"
            id="downloadSection"
            style="display: none"
          >
            <p>Your file is ready to download:</p>
            <a href="#" id="fileLink" class="btn download-btn" target="_blank"
              >Download File</a
            >
            <button id="copyButton" class="btn download-btn ms-2">
              Copy Link
            </button>
            <div class="qrcode-container d-flex align-items-center justify-content-center mt-4">
              <div id="qrcode"></div>
            <!-- <div class="mt-3" id="qrcode"></div> -->
            <button id="backToHome" class="btn btn-link mt-3">
              Upload Another File
            </button>
          </div>
        </div>
      </div>
    </div>
    </div>
    <!-- Footer -->
    <footer class="mt-8 text-muted-foreground dark:text-muted text-center">
      Â© 2024 Secure File Share. All rights reserved. <a href="#" class="text-purple-600 dark:text-purple-300">Privacy Policy</a> |
      <a href="#" class="text-purple-600 dark:text-purple-300">Terms of Service</a>
    </footer>
   

    <script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

    <script src="/js/script.js"></script>
  </body>
</html>
