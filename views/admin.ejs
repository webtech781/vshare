<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Login</title>
    <style>
        /* Background styles */
        body {
            background-color: #101725;
            background-image: 
                radial-gradient(at 47% 33%, hsl(271.35, 100%, 56%) 0, transparent 59%), 
                radial-gradient(at 82% 65%, hsl(218.00, 39%, 11%) 0, transparent 55%);
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding: 20px; /* For better handling on small screens */
        }

        /* Glassmorphism card effect */
        .card {
            backdrop-filter: blur(11px) saturate(181%);
            -webkit-backdrop-filter: blur(11px) saturate(181%);
            background-color: rgba(17, 25, 40, 0.88);
            border-radius: 12px;
            border: 1px solid rgba(255, 255, 255, 0.125);
            padding: 30px;
            width: 100%;
            max-width: 400px;
            color: white;
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        }

        .card h2 {
            margin-bottom: 20px;
            font-size: 1.5em;
            text-align: center;
        }

        .input-group {
            margin-bottom: 20px;
            position: relative;
        }

        /* Input field styles */
        .input-group input {
            width: 100%;
            padding: 12px 45px 12px 15px;
            border-radius: 8px;
            border: 1px solid rgba(255, 255, 255, 0.25);
            font-size: 1em;
            background-color: rgba(17, 25, 40, 0.88);
            color: white;
            box-sizing: border-box; /* Ensure padding doesn't overflow on smaller screens */
        }

        .input-group input::placeholder {
            color: #aaa;
        }

        /* SVG icons inside input */
        .input-group svg {
            position: absolute;
            top: 50%;
            left: 15px;
            transform: translateY(-50%);
            color: #aaa;
            font-size: 1.2em;
        }

        /* Checkbox styling */
        .card input[type="checkbox"] {
            margin-right: 10px;
        }

        .card button {
            width: 100%;
            padding: 12px;
            background-color: #28a745;
            border: none;
            color: white;
            font-size: 1em;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .card button:hover {
            background-color: #218838;
        }

        /* Links */
        .card .links {
            display: flex;
            justify-content: space-between;
            font-size: 0.9em;
            margin-top: 10px;
        }

        .card a {
            color: #3498db;
            text-decoration: none;
        }

        .card a:hover {
            text-decoration: underline;
        }

        /* Responsive styles */
        @media (max-width: 480px) {
            .card {
                padding: 20px;
                box-shadow: none; /* Reduce shadow on mobile for cleaner look */
            }

            .card h2 {
                font-size: 1.2em; /* Slightly smaller title on mobile */
            }

            .input-group input {
                font-size: 0.9em; /* Slightly smaller input text for mobile */
            }

            .card button {
                padding: 10px; /* Reduce button size on smaller screens */
            }

            .card .links {
                flex-direction: column; /* Stack the links vertically on mobile */
                align-items: center;
            }

            .card .links a {
                margin-bottom: 10px; /* Add spacing between stacked links */
            }
        }

    </style>
</head>
<body>

    <div class="card">
        <!-- <h2>Sign in to our platform</h2> -->
        <h2>Admin Login</h2>
        <% if (errorMessage) { %>
            <div class="error-container">
                <p><%= errorMessage %></p>
            </div>
        <% } %>
        <form action="/admin/login" method="POST">
            <div class="input-group">
                <!-- <input type="email" id="email" name="email" placeholder="     example@company.com" required>
                <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#aaa">
                    <path d="M0 0h24v24H0V0z" fill="none"/>
                    <path d="M20 4H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 14H4V8l8 5 8-5v10z"/>
                </svg> -->
                <input type="text" id="username" name="username" placeholder="     Username" required>
                <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#aaa">
                    <path d="M0 0h24v24H0V0z" fill="none"/>
                    <path d="M12 12c2.28 0 4-1.72 4-4s-1.72-4-4-4-4 1.72-4 4 1.72 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                </svg>
            </div>

            <div class="input-group">
                <input type="password" id="password" name="password" placeholder="     Password" required>
                <svg xmlns="http://www.w3.org/2000/svg" height="20px" viewBox="0 0 24 24" width="20px" fill="#aaa">
                    <path d="M0 0h24v24H0V0z" fill="none"/>
                    <path d="M12 17c1.66 0 3-1.34 3-3s-1.34-3-3-3-3 1.34-3 3 1.34 3 3 3zm6-8h-1V7c0-2.76-2.24-5-5-5S7 4.24 7 7v2H6c-1.1 0-2 .9-2 2v10c0 1.1.9 2 2 2h12c1.1 0 2-.9 2-2V11c0-1.1-.9-2-2-2zm-6-5c1.66 0 3 1.34 3 3v2H9V7c0-1.66 1.34-3 3-3zm6 16H6V11h12v10z"/>
                </svg>
            </div>

            <div>
                <input type="checkbox" id="remember" name="remember">
                <label for="remember">Remember me</label>
            </div>
            <br>
            <button type="submit">Sign in</button>
            
            <div class="links">
                <label >you can use :</label>
                <a href="#">Usepasskey</a>
            </div>
            <!-- <div class="links">
                <a href="#">Lost password?</a>
                <a href="#">Create account</a>
            </div> -->
        </form>
    </div>

    <script>
        document.querySelector('form').addEventListener('submit', async (e) => {
            e.preventDefault();
            const formData = new FormData(e.target);
            try {
                const response = await fetch('/admin/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(Object.fromEntries(formData)),
                });
                const result = await response.json();
                if (result.success) {
                    console.log('Login successful, redirecting...');
                    window.location.href = '/admin/panel';
                } else {
                    alert('Login failed: ' + (result.error || 'Unknown error'));
                }
            } catch (error) {
                console.error('Login error:', error);
                alert('An error occurred during login. Please try again.');
            }
        });
    </script>
</body>
</html>


